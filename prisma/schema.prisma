// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TradeSourceEnum {
  IMPORTED
  MANUAL
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  wallets   Wallet[]
  
  @@map("users")
}

model Wallet {
  id        String   @id @default(cuid())
  address   String
  chain     String   @default("solana")
  label     String?
  isActive  Boolean  @default(true)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades Trade[]
  importJobs ImportJob[]
  
  @@unique([userId, address, chain])
  @@index([userId, isActive])
  @@map("wallets")
}

model Trade {
  id          String   @id @default(cuid())
  signature   String   @unique
  walletId    String
  
  type        String
  tokenIn     String
  tokenOut    String
  amountIn    Decimal  @db.Decimal(20, 8)
  amountOut   Decimal  @db.Decimal(20, 8)
  priceIn     Decimal? @db.Decimal(20, 8)
  priceOut    Decimal? @db.Decimal(20, 8)
  
  dex         String?
  fees        Decimal  @default(0) @db.Decimal(10, 8)
  blockTime   DateTime
  slot        BigInt?
  
  processed   Boolean  @default(false)
  error       String?
  
  // Manual trade management fields
  source      TradeSourceEnum @default(IMPORTED)
  isEditable  Boolean  @default(true)
  originalData Json?   // Preserve original import data
  notes       String?  // User notes
  lastModified DateTime @updatedAt
  modifiedBy  String?  // User ID who last modified
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  positionTrades PositionTrade[]
  auditLogs TradeAuditLog[]
  
  @@index([walletId, blockTime])
  @@index([walletId, source])
  @@index([signature])
  @@index([source, blockTime])
  @@map("trades")
}

model ImportJob {
  id          String   @id @default(cuid())
  walletId    String
  status      String
  progress    Int      @default(0)
  total       Int?
  error       String?
  startedAt   DateTime @default(now())
  completedAt DateTime?
  
  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  
  @@index([walletId, status])
  @@map("import_jobs")
}

model Position {
  id             String   @id @default(cuid())
  symbol         String   // Token symbol
  walletAddress  String
  openDate       DateTime
  closeDate      DateTime?
  status         String   // 'open' or 'closed'
  
  // Calculated fields
  totalQuantity  Decimal  @db.Decimal(20, 8)
  avgEntryPrice  Decimal  @db.Decimal(20, 8)
  avgExitPrice   Decimal? @db.Decimal(20, 8)
  realizedPnL    Decimal  @default(0) @db.Decimal(20, 8)
  unrealizedPnL  Decimal  @default(0) @db.Decimal(20, 8)
  fees           Decimal  @default(0) @db.Decimal(10, 8)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Relations
  positionTrades PositionTrade[]
  
  @@index([walletAddress, symbol])
  @@index([walletAddress, status])
  @@index([openDate])
  @@map("positions")
}

model PositionTrade {
  id         String   @id @default(cuid())
  positionId String
  tradeId    String
  role       String   // 'entry' or 'exit'
  quantity   Decimal  @db.Decimal(20, 8)
  price      Decimal  @db.Decimal(20, 8)
  fees       Decimal  @default(0) @db.Decimal(10, 8)
  timestamp  DateTime
  
  position   Position @relation(fields: [positionId], references: [id], onDelete: Cascade)
  trade      Trade    @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  @@unique([positionId, tradeId])
  @@index([positionId])
  @@index([tradeId])
  @@map("position_trades")
}

model TradeAuditLog {
  id          String   @id @default(cuid())
  tradeId     String
  userId      String
  action      String   // CREATE, UPDATE, DELETE, ARCHIVE, RESTORE
  fieldName   String?  // Field that was changed
  oldValue    String?  // Previous value
  newValue    String?  // New value
  reason      String?  // Reason for change
  timestamp   DateTime @default(now())
  
  trade Trade @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  @@index([tradeId, timestamp])
  @@index([userId, timestamp])
  @@map("trade_audit_logs")
}

model JournalEntry {
  id        String   @id @default(cuid())
  type      String   // 'trade', 'position', 'general'
  targetId  String?  // Trade ID, Position ID, or null for general entries
  userId    String
  title     String
  content   String   @db.Text
  tags      String[] // Array of tag names
  rating    Int?     // 1-5 stars
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  files JournalFile[]
  
  @@index([userId, type])
  @@index([userId, targetId])
  @@index([userId, createdAt])
  @@index([tags])
  @@map("journal_entries")
}

model JournalFile {
  id              String   @id @default(cuid())
  journalEntryId  String
  fileName        String
  fileType        String   // 'image', 'audio', 'document'
  mimeType        String
  fileSize        BigInt   // File size in bytes
  storageUrl      String
  duration        Int?     // For audio files, duration in seconds
  transcript      String?  // Optional auto-generated transcript for audio
  uploadedAt      DateTime @default(now())
  
  // Relations
  journalEntry JournalEntry @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)
  
  @@index([journalEntryId])
  @@index([fileType])
  @@map("journal_files")
}

model JournalTag {
  id         String   @id @default(cuid())
  name       String
  color      String?  // Hex color for UI display
  userId     String
  usageCount Int      @default(1)
  createdAt  DateTime @default(now())
  
  @@unique([userId, name])
  @@index([userId, usageCount])
  @@map("journal_tags")
}